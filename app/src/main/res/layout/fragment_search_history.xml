<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_85"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/spacing_12"
    tools:context=".ui.fragments.SearchHistoryFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guidelines_margin_ends" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guidelines_margin_ends" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_history"
        android:layout_width="@dimen/spacing_0"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/gl_start"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"/>

</androidx.constraintlayout.widget.ConstraintLayout>