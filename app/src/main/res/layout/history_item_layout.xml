<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_8"
    android:background="@drawable/bordered_round_bg"
    android:padding="@dimen/spacing_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_screen_title"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_16"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/tv_search_text_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_text_title"
        android:text="hello"
        android:id="@+id/tv_search_text"
        android:layout_marginTop="@dimen/spacing_4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_text"
        app:layout_constraintStart_toStartOf="@+id/tv_search_text"
        android:text="@string/browsed_through_text"
        android:id="@+id/tv_browsed_through_dummy"
        android:layout_marginTop="@dimen/spacing_8"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14"
        android:textColor="@color/black"
        android:id="@+id/tv_browsed_items"
        android:layout_marginStart="@dimen/spacing_3"
        app:layout_constraintStart_toEndOf="@+id/tv_browsed_through_dummy"
        app:layout_constraintTop_toTopOf="@+id/tv_browsed_through_dummy"
        app:layout_constraintBottom_toBottomOf="@+id/tv_browsed_through_dummy"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="15th August"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12"
        android:id="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_browsed_items"/>

</androidx.constraintlayout.widget.ConstraintLayout>