<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_8"
    android:layout_margin="@dimen/spacing_8"
    android:background="@drawable/coloured_rounded_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/spacing_150"
        android:layout_height="@dimen/spacing_150"
        android:id="@+id/search_item_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/spacing_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/search_item_image"
        app:layout_constraintRight_toRightOf="@+id/search_item_image"
        app:layout_constraintTop_toBottomOf="@+id/search_item_image"
        android:layout_marginTop="@dimen/spacing_8"
        android:id="@+id/search_item_title"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17"
        android:maxLines="@integer/et_max_lines"/>

</androidx.constraintlayout.widget.ConstraintLayout>